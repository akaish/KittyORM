<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lt_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TODO move colours to theme or smthg like that -->

    <android.support.design.widget.TabLayout
        android:id="@+id/lt_result_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_gray_gradient"
        app:layout_collapseMode="pin"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorDarkGray"
        app:tabTextColor="@color/colorDarkDarkGray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/lt_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</LinearLayout>
