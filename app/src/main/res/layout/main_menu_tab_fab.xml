<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_menu_fab_container_layout"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:layout_behavior="net.akaish.kittyormdemo.view.MoveUpwardBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|end">

    <LinearLayout
        android:id="@+id/mm_mail_fab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin_outer"
        android:padding="@dimen/fab_12"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrayLightest"
            android:background="@drawable/fab_menu_text_bg"
            android:layout_marginRight="@dimen/fab_12"
            android:text="@string/_mm_fab_contact"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mm_mail_fab"
            android:layout_width="@dimen/fab_46"
            android:layout_height="@dimen/fab_46"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_fab_mail"
            app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mm_follow_fab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin_outer"
        android:padding="@dimen/fab_12"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fab_menu_text_bg"
            android:textColor="@color/colorGrayLightest"
            android:layout_marginRight="@dimen/fab_12"
            android:text="@string/_mm_follow_us"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mm_follow_fab"
            android:layout_width="@dimen/fab_46"
            android:layout_height="@dimen/fab_46"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_fab_follow"
            app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mm_share_fab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin_outer"
        android:padding="@dimen/fab_12"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fab_menu_text_bg"
            android:textColor="@color/colorGrayLightest"
            android:layout_marginRight="@dimen/fab_12"
            android:text="@string/_l6_fab_share"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mm_share_fab"
            android:layout_width="@dimen/fab_46"
            android:layout_height="@dimen/fab_46"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_fab_share_kitty"
            app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mm_license_fab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin_outer"
        android:padding="@dimen/fab_12"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fab_menu_text_bg"
            android:textColor="@color/colorGrayLightest"
            android:layout_marginRight="@dimen/fab_12"
            android:text="@string/_mm_fab_legal_info"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/mm_license_fab"
            android:layout_width="@dimen/fab_46"
            android:layout_height="@dimen/fab_46"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_fab_license"
            app:fabSize="mini"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:padding="@dimen/fab_12"
        android:layout_gravity="bottom|end">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_menu_fab"
            android:layout_gravity="bottom|end"
            android:layout_width="@dimen/fab_56"
            android:layout_height="@dimen/fab_56"
            app:srcCompat="@drawable/ic_fab_up_bigger"
            app:fabSize="normal"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>